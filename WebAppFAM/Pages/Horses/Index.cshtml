@page
@model WebAppFAM.Pages.Horses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Horse Listing</h2>

<p>
    <a asp-page="Create">Create New Horse</a>
</p>
<div style="overflow-x:auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].FleetNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].RegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].VinNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].PhoneNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].GPSUnitNo)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].LicenseExpiry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horse[0].InsuranceExpiry)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Horse)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FleetNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VinNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPSUnitNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseExpiry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsuranceExpiry)
                </td>

                <td>
                    @*  <a asp-page="./Edit" asp-route-id="@item.VehicleID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.VehicleID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.VehicleID">Delete</a>
                    *@
                    <p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>                   
                </td>
                <td>
                    <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>
                </td>
                <td>
                    <p data-placement="top" data-toggle="tooltip" title="Information"><button class="btn btn-success btn-xs" data-title="Details" data-toggle="modal" data-target="#details"><span class="glyphicon-menu-hamburger"></span></button></p>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
