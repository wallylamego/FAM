@page "{id?}"
@model WebAppFAM.Pages.Trailers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Trailer</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trailer.FleetNo" class="control-label"></label>
                <input asp-for="Trailer.FleetNo" class="form-control" />
                <span asp-validation-for="Trailer.FleetNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.TrailerType" class="control-label"></label>

                <select asp-for="Trailer.TrailerTypeID"
                        asp-items="Model.TrailerNameSL" class="form-control">
                    Trailer Type
                    <option value="">--Select Trailer Type--</option>
                </select>
                <span asp-validation-for="Trailer.TrailerTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.RegistrationNumber" class="control-label"></label>
                <input asp-for="Trailer.RegistrationNumber" class="form-control" />
                <span asp-validation-for="Trailer.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.VinNo" class="control-label"></label>
                <input asp-for="Trailer.VinNo" class="form-control" />
                <span asp-validation-for="Trailer.VinNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.LinkRegistrationNumber" class="control-label"></label>
                <input asp-for="Trailer.LinkRegistrationNumber" class="form-control" />
                <span asp-validation-for="Trailer.LinkRegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.LinkVinNo" class="control-label"></label>
                <input asp-for="Trailer.LinkVinNo" class="form-control" />
                <span asp-validation-for="Trailer.LinkVinNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.LicenseExpiry" class="control-label"></label>
                <input asp-for="Trailer.LicenseExpiry" class="form-control" />
                <span asp-validation-for="Trailer.LicenseExpiry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trailer.InsuranceExpiry" class="control-label"></label>
                <input asp-for="Trailer.InsuranceExpiry" class="form-control" />
                <span asp-validation-for="Trailer.InsuranceExpiry" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Trailer.VehicleID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
